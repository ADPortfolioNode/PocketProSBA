# Frontend Environment Configuration
# Copy this file to .env and configure for your environment

# Backend URL Configuration
# For local development, these will be automatically detected
# For production deployments, set these explicitly

# Primary backend URL
REACT_APP_BACKEND_URL=http://localhost:5000

# Render deployment specific
REACT_APP_RENDER_BACKEND_URL=https://pocketprosba-backend.onrender.com

# Docker deployment specific
REACT_APP_DOCKER_BACKEND_URL=http://localhost:5000

# Development settings
REACT_APP_DEV_MODE=true
REACT_APP_DEBUG_CONNECTION=true

# Health check configuration
REACT_APP_HEALTH_CHECK_INTERVAL=30000
REACT_APP_CONNECTION_TIMEOUT=10000

# API endpoints
REACT_APP_API_PREFIX=/api
REACT_APP_HEALTH_ENDPOINT=/health
REACT_APP_CHAT_ENDPOINT=/api/chat
REACT_APP_UPLOAD_ENDPOINT=/api/upload
