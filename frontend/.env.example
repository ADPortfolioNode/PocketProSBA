# PocketPro SBA Frontend Environment Variables
# Copy this file to .env and update the values for your environment

# API Configuration
REACT_APP_API_URL=http://localhost:5000
REACT_APP_API_TIMEOUT=10000

# Application Configuration
REACT_APP_APP_NAME=PocketPro SBA
REACT_APP_VERSION=1.0.0
REACT_APP_ENVIRONMENT=development

# Feature Flags
REACT_APP_ENABLE_DEBUG=true
REACT_APP_ENABLE_ANALYTICS=false

# Authentication (if applicable)
REACT_APP_AUTH_ENABLED=false
REACT_APP_AUTH_DOMAIN=your-auth-domain.auth0.com
REACT_APP_AUTH_CLIENT_ID=your-auth-client-id
REACT_APP_AUTH_AUDIENCE=your-auth-audience

# External Services
REACT_APP_SENTRY_DSN=your-sentry-dsn-if-enabled
REACT_APP_GOOGLE_ANALYTICS_ID=your-ga-id-if-enabled

# Development Settings
GENERATE_SOURCEMAP=true
FAST_REFRESH=true

# Build Optimization
INLINE_RUNTIME_CHUNK=false

# Note: For production deployment, set:
# REACT_APP_ENVIRONMENT=production
# REACT_APP_ENABLE_DEBUG=false
# GENERATE_SOURCEMAP=false
